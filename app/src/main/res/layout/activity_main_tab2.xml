<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_form"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:id="@+id/ll_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_marginTop="@dimen/dp30">

            <ImageView
                style="@style/icon_left"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp12"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="广告 0/10"
                android:textColor="@color/text_content"
                android:textSize="@dimen/sp20" />

            <ImageView
                style="@style/icon_left"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp12"
                android:src="@mipmap/icon_back_white"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp77"
        android:src="@mipmap/img_no_advertising"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="该业还没有广告"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp26"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="您可以通过以下方式收集"
        android:layout_marginTop="@dimen/dp10"
        android:textSize="@dimen/sp22"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="@dimen/dp214"
        android:layout_marginTop="@dimen/dp64"
        android:background="@drawable/shape_btn_hollow_red"
        android:gravity="center"
        android:layout_height="@dimen/dp56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="收集广告红包"
            android:textColor="@color/btn_normal1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp214"
        android:layout_marginTop="@dimen/dp32"
        android:background="@drawable/shape_btn_hollow_red"
        android:gravity="center"
        android:layout_height="@dimen/dp56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="访问好友广告"
            android:textColor="@color/btn_normal1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp214"
        android:layout_marginTop="@dimen/dp32"
        android:background="@drawable/shape_btn_hollow_red"
        android:gravity="center"
        android:layout_height="@dimen/dp56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="参与系统活动"
            android:textColor="@color/btn_normal1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
