<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_form"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:id="@+id/ll_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp25">

            <LinearLayout
                android:id="@+id/llbtn_clock"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp12"
                    android:src="@mipmap/icon_wallet" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="@dimen/dp5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_countdown"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:text="55"
                        android:textColor="@color/text_list_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="广告0/10"
                android:textColor="@color/text_list_content"
                android:textSize="@dimen/sp20" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp77"
        android:src="@mipmap/img_no_advertising"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="该页还没有广告"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp26"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="您可以通过以下方式收集"
        android:layout_marginTop="@dimen/dp10"
        android:textSize="@dimen/sp22"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_btn1"
        android:layout_width="@dimen/dp214"
        android:layout_marginTop="@dimen/dp64"
        android:background="@drawable/shape_btn_hollow_red"
        android:gravity="center"
        android:layout_height="@dimen/dp56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="收集广告红包"
            android:textColor="@color/btn_normal1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llbtn_activearea"
        android:layout_width="@dimen/dp214"
        android:layout_marginTop="@dimen/dp32"
        android:background="@drawable/shape_btn_hollow_red"
        android:gravity="center"
        android:layout_height="@dimen/dp56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="访问好友广告"
            android:textColor="@color/btn_normal1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp214"
        android:layout_marginTop="@dimen/dp32"
        android:background="@drawable/shape_btn_hollow_red"
        android:gravity="center"
        android:layout_height="@dimen/dp56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="参与系统活动"
            android:textColor="@color/btn_normal1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
