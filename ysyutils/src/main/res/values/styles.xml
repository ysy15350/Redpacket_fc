<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="guideTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/icon_guide</item>
    </style>

    <!-- 窗体公用样式 -->
    <style name="base_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_form</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 标题布局 -->
    <style name="form_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp80</item>

        <item name="android:background">@color/white</item>
    </style>

    <!-- 标题文本 -->
    <style name="form_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp40</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/sp22</item>
        <!-- <item name="android:textStyle">bold</item> -->

    </style>


    <!-- 内容文本 -->
    <style name="text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <!--文本编辑框，登录注册等-->
    <style name="base_edit_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp57</item>
        <item name="android:background">@drawable/shape_edit</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="edit_icon">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:layout_marginStart">@dimen/dp13</item>
    </style>

    <style name="base_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp13</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_edit</item>
        <item name="android:hint">@string/hint_edit</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--********************************九宫格菜单********************************-->


    <style name="menu_item_grid_layout_horizon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp145</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="menu_item_grid_layout_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="menu_item_grid_icon">
        <item name="android:layout_width">@dimen/dp35</item>
        <item name="android:layout_height">@dimen/dp35</item>
    </style>

    <!-- 菜单内容 -->
    <style name="menu_item_grid_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>


    <!--********************************九宫格菜单end********************************-->


    <!--********************************列表菜单********************************-->

    <!-- 个人资料_项 -->
    <style name="menu_item_list_layout_horizon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp64</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>


    <!--左边图标-->
    <style name="menu_item_list_icon">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:layout_marginStart">@dimen/dp13</item>
    </style>

    <!-- 左边标题 -->
    <style name="menu_item_list_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <!--右边内容-->
    <style name="menu_item_list_content" parent="menu_item_list_text">
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="menu_item_list_right_icon">
        <item name="android:layout_width">@dimen/dp20</item>
        <item name="android:layout_height">@dimen/dp20</item>
        <item name="android:layout_marginEnd">@dimen/dp13</item>
        <item name="android:src">@mipmap/icon_right</item>
    </style>


    <!--********************************列表菜单end********************************-->


    <!-- ********************************分割线 ******************************** -->

    <!-- view分割线样式 -->
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <style name="view_line_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:layout_marginStart">@dimen/dp15</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- view分割线样式短 -->
    <style name="view_line_short" parent="view_line">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- view分割线样式 -->
    <style name="view_line_vertical">
        <item name="android:layout_width">@dimen/dp1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- ********************************分割线end ******************************** -->


    <!-- dialog -->
    <!-- 对话框主题 -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- popupwindow -->
    <!-- 从下到上 -->
    <style name="app_pop">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

    <!-- 从上到下 -->
    <style name="app_pop2">
        <item name="android:windowEnterAnimation">@anim/pop_up2</item>
        <item name="android:windowExitAnimation">@anim/pop_down2</item>
    </style>

    <!-- 从左到右 -->
    <style name="app_pop_1">
        <item name="android:windowEnterAnimation">@anim/pop_down_1</item>
        <item name="android:windowExitAnimation">@anim/pop_up_1</item>
    </style>

    <!-- 可见度从无到有 -->
    <style name="app_pop_2">
        <item name="android:windowEnterAnimation">@anim/pop_down_2</item>
        <item name="android:windowExitAnimation">@anim/pop_up_2</item>
    </style>

    <!-- 可见度从无到有 -->
    <style name="app_pop_3">
        <item name="android:windowEnterAnimation">@anim/alpha</item>
        <item name="android:windowExitAnimation">@anim/alpha_2</item>
    </style>



    <!-- *********************************个人资料 ********************************* -->




    <!-- 个人资料_项 -->
    <style name="my_info_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp64</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--内容编辑-->
    <style name="my_info_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/dp38</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/hint_edit</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="my_info_edit1" parent="my_info_edit">
        <item name="android:layout_marginEnd">@dimen/dp5</item>
    </style>


    <!-- 左边标题 -->
    <style name="my_info_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <!--注册-->
    <style name="update_pwd_title" parent="my_info_title">
        <item name="android:layout_width">@dimen/dp120</item>
    </style>


    <style name="btn_get_code">
        <item name="android:layout_width">@dimen/dp115</item>
        <item name="android:layout_height">@dimen/dp33</item>
        <item name="android:layout_marginEnd">@dimen/dp13</item>
        <item name="android:background">@drawable/shape_btn_getcode</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/btn_get_code</item>
        <item name="android:textColor">@color/btn_normal</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>


    <!-- 确认按钮、提交按钮等 -->
    <style name="btn_ok">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp58</item>
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:text">@string/btn_ok</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>


</resources>
