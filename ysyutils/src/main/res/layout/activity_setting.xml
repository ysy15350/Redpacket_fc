<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/base_form">

    <!-- 个人资料 -->

    <include layout="@layout/form_head" />

    <!-- 菜单 -->

    <View style="@style/view_line" />

    <!--清除缓存-->
    <LinearLayout
        android:id="@+id/ll_menu_1"
        style="@style/menu_item_list_layout_horizon">

        <ImageView
            style="@style/menu_item_list_icon"
            android:src="@mipmap/icon_setting1" />

        <TextView
            style="@style/menu_item_list_text"
            android:layout_weight="1"
            android:text="@string/setting1" />

        <TextView
            android:id="@+id/tv_cacheSize"
            style="@style/menu_item_list_content"
            android:layout_marginEnd="@dimen/dp13"
            tools:text="6.5M" />


        <ImageView style="@style/menu_item_list_right_icon" />

    </LinearLayout>

    <View style="@style/view_line" />

    <!--检测更新-->
    <LinearLayout
        android:id="@+id/ll_menu_2"
        style="@style/menu_item_list_layout_horizon">

        <ImageView
            style="@style/menu_item_list_icon"
            android:src="@mipmap/icon_setting2" />

        <TextView
            style="@style/menu_item_list_text"
            android:layout_weight="1"
            android:text="@string/setting2" />

        <TextView
            android:id="@+id/tv_version"
            style="@style/menu_item_list_content"
            android:layout_marginEnd="@dimen/dp13"
            tools:text="1.0.0" />

        <ImageView style="@style/menu_item_list_right_icon" />

    </LinearLayout>

    <View style="@style/view_line" />

    <View
        style="@style/view_line"
        android:layout_marginTop="@dimen/dp20" />

    <!--检测更新-->
    <LinearLayout
        android:id="@+id/ll_menu_3"
        style="@style/menu_item_list_layout_horizon">

        <ImageView
            style="@style/menu_item_list_icon"
            android:src="@mipmap/icon_setting3" />

        <TextView
            style="@style/menu_item_list_text"
            android:layout_weight="1"
            android:text="@string/setting3" />


        <ImageView style="@style/menu_item_list_right_icon" />

    </LinearLayout>

</LinearLayout>